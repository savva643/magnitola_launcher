<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#CCFF2D55"
                android:endColor="#99FF2D55"
                android:angle="135"
                android:type="linear" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Glass effect overlay -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1A1C1C1E" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#1AFFFFFF" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</layer-list>
