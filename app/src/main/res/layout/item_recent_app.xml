<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardRecentApp"
    android:layout_width="200dp"
    android:layout_height="280dp"
    android:layout_margin="@dimen/medium_margin"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/black_alpha_80"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- App Preview/Screenshot -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ivAppPreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/black_alpha_40" />

            <!-- Top Controls -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="top"
                android:padding="@dimen/small_padding"
                android:background="@drawable/top_controls_background">

                <!-- App Icon -->
                <ImageView
                    android:id="@+id/ivAppIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/round_phone_android_24"
                    android:layout_gravity="center_vertical" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- Lock Button -->
                <ImageButton
                    android:id="@+id/btnLockApp"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/round_lock_open_24"
                    android:background="@drawable/control_button_background"
                    android:layout_marginEnd="@dimen/small_margin"
                    android:tint="@color/white"
                    android:scaleType="centerInside" />

                <!-- Close Button -->
                <ImageButton
                    android:id="@+id/btnCloseApp"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/baseline_close_24"
                    android:background="@drawable/close_button_background"
                    android:tint="@color/white"
                    android:scaleType="centerInside" />

            </LinearLayout>

        </FrameLayout>

        <!-- App Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/medium_padding"
            android:background="@drawable/app_info_background">

            <!-- App Name -->
            <TextView
                android:id="@+id/tvAppName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="App Name"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="4dp" />

            <!-- Last Used Time -->
            <TextView
                android:id="@+id/tvLastUsedTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2 мин назад"
                android:textColor="@color/gray_300"
                android:textSize="11sp"
                android:layout_marginBottom="2dp" />

            <!-- Memory Usage -->
            <TextView
                android:id="@+id/tvMemoryUsage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="128 MB"
                android:textColor="@color/gray_400"
                android:textSize="10sp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
